{
  "name": "quarp",
  "displayName": "Quarp",
  "description": "quarkdown previewer.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "activationEvents": [
    "onCommand:quarkdown-slides.preview",
    "onCommand:quarkdown-slides.exportPdf",
    "onLanguage:quarkdown",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "quarkdown-slides.preview",
        "title": "Quarkdown: Open HTML Preview in Editor",
        "icon": "$(preview)"
      },
      {
        "command": "quarkdown-slides.exportHtml",
        "title": "Quarkdown: Export to HTML",
        "icon": "$(file-code)"
      },
      {
        "command": "quarkdown-slides.exportPdf",
        "title": "Quarkdown: Export to PDF",
        "icon": "$(file-pdf)"
      }
    ],
    "languages": [
      {
        "id": "quarkdown",
        "aliases": ["Quarkdown", "qmd"],
        "extensions": [".qmd"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "quarkdown",
        "scopeName": "source.qmd",
        "path": "./syntaxes/quarkdown.tmLanguage.json"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "quarkdown-slides.preview",
          "group": "navigation",
          "when": "editorLangId == quarkdown",
          "icon": "$(preview)"
        },
        {
          "command": "quarkdown-slides.exportHtml",
          "group": "navigation",
          "when": "editorLangId == quarkdown",
          "icon": "$(file-code)"
        },
        {
          "command": "quarkdown-slides.exportPdf",
          "group": "navigation",
          "when": "editorLangId == quarkdown",
          "icon": "$(file-pdf)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}

{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Quarkdown",
  "patterns": [
    {
      "include": "#quarkdown-elements"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#bold"
    },
    {
      "include": "#italic"
    },
    {
      "include": "#code-block"
    },
    {
      "include": "#inline-code"
    },
    {
      "include": "#links"
    },
    {
      "include": "#images"
    },
    {
      "include": "#lists"
    },
    {
      "include": "#math"
    },
    {
      "include": "#alerts"
    },
    {
      "include": "#quotation-source"
    },
    {
      "include": "#html-comments"
    },
    {
      "include": "#slide-separator"
    },
    {
      "include": "#horizontal-rule"
    }
  ],
  "repository": {
    "quarkdown-elements": {
      "patterns": [
        {
          "name": "entity.name.function.quarkdown",
          "match": "\\.(docname|docauthor|doctype|doclang|theme|autopagebreak|footer|column|function|var|fragment|whitespace|poweredby|sourceresult|csv|mermaid|tableofcontents|code|read|divide|grid|row|container|text|box|table|foreach|if|ifnot|let|repeat|xychart|sum|pow|multiply|truncate|logn|iseven|node|downarrow|source|rightarrow|include|section|slide|page|tableofcontents)\\b|@lambda\\b"
        },
        {
          "name": "variable.parameter.quarkdown",
          "match": "\\b(layout|maxdepth|credits|size|variant|alignment|gap|fullwidth|width|cross|to|from|by|columns|orientation|transition|speed|source|shrinkvertical|animated|horizontal|lines|n|otherwise)\\b(?=\\?|:)"
        },
        {
          "name": "keyword.operator.quarkdown",
          "match": "\\?"
        },
        {
          "name": "punctuation.separator.key-value.quarkdown",
          "match": ":"
        },
        {
          "name": "keyword.operator.pipeline.quarkdown",
          "match": "::"
        },
        {
          "name": "string.quoted.block.quarkdown",
          "begin": "\\{",
          "end": "\\}",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.string.begin.quarkdown"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.quarkdown"
            }
          },
          "patterns": [
            {
              "include": "#quarkdown-values"
            },
            {
              "include": "$self"
            }
          ]
        }
      ]
    },
    "quarkdown-values": {
      "patterns": [
        {
          "name": "variable.other.quarkdown",
          "match": "\\b(yes|no|true|false|null)\\b"
        },
        {
          "name": "entity.name.tag.quarkdown",
          "match": "\\b(center|markdown|downarrow|rightarrow|small|large|bold|pi)\\b"
        },
        {
          "name": "variable.other.property.quarkdown",
          "match": "\\b(sourceresult|snippet|ishorizontal|output|voffset)\\b"
        },
        {
          "name": "constant.numeric.quarkdown",
          "match": "\\b\\d+(\\.\\d+)?(px|cm|in)?\\b|\\.\\d+\\b"
        },
        {
          "name": "constant.other.color.quarkdown",
          "match": "#[0-9a-fA-F]{6}\\b|rgb\\(\\d{1,3},\\s*\\d{1,3},\\s*\\d{1,3}\\)|hsl\\(\\d{1,3},\\s*\\d{1,3},\\s*\\d{1,3}\\)|hsv\\(\\d{1,3},\\s*\\d{1,3},\\s*\\d{1,3}\\)"
        },
        {
          "name": "string.quoted.single.quarkdown",
          "match": "'[^']+'"
        },
        {
          "name": "string.quoted.double.quarkdown",
          "match": "\"[^\"]+\""
        },
        {
          "name": "string.unquoted.quarkdown",
          "match": "[a-zA-Z0-9_\\/\\.\\-]+|\\b[a-zA-Z_][a-zA-Z0-9_]*\\b|\\b[0-9]+\\.\\.[0-9]+\\b"
        }
      ]
    },
    "links": {
      "patterns": [
        {
          "name": "markup.underline.link.markdown",
          "match": "\\[[^\\]]+\\]\\([^\\)]+\\)"
        }
      ]
    },
    "images": {
      "patterns": [
        {
          "name": "markup.underline.link.image.markdown",
          "match": "!\\([^_]+\\)\\[[^\\]]+\\]\\([^\\)]+\\)"
        }
      ]
    },
    "lists": {
      "patterns": [
        {
          "name": "markup.list.unnumbered.markdown",
          "match": "^\\s*[-*+]\\s+"
        },
        {
          "name": "markup.list.numbered.markdown",
          "match": "^\\s*\\d+\\.\\s+"
        }
      ]
    },
    "math": {
      "patterns": [
        {
          "name": "string.other.math.block.latex",
          "begin": "\\$\\$",
          "end": "\\$\\$",
          "patterns": [
            {
              "include": "text.tex.latex"
            }
          ]
        },
        {
          "name": "string.other.math.inline.latex",
          "begin": "\\$",
          "end": "\\$",
          "patterns": [
            {
              "include": "text.tex.latex"
            }
          ]
        }
      ]
    },
    "alerts": {
      "patterns": [
        {
          "name": "markup.other.alert.note.markdown",
          "match": "^>\\s*(Note|Tip|Warning):.*$"
        }
      ]
    },
    "quotation-source": {
      "patterns": [
        {
          "name": "markup.quote.source.markdown",
          "match": "^>\\s*-\\s*.*$"
        }
      ]
    },
    "html-comments": {
      "name": "comment.block.html",
      "begin": "<!--",
      "end": "-->",
      "patterns": [
        {
          "include": "#quarkdown-elements"
        },
        {
          "include": "#quarkdown-values"
        }
      ]
    },
    "slide-separator": {
      "name": "punctuation.separator.slide.quarkdown",
      "match": "^<<<\\s*$"
    },
    "horizontal-rule": {
      "name": "punctuation.separator.horizontal-rule.quarkdown",
      "match": "^---\\s*$"
    },
    "code-block": {
      "begin": "^```\\s*([a-zA-Z0-9._-]+)?\\s*$",
      "end": "^```\\s*$",
      "name": "markup.fenced_code.block.quarkdown",
      "contentName": "source.qd",
      "patterns": [
        {
          "begin": "(?<=^```\\s*)([a-zA-Z0-9._-]+)",
          "end": "(?=\\s*$)",
          "name": "variable.language.fenced_code.block.quarkdown",
          "captures": {
            "1": {
              "name": "fenced_code.block.language"
            }
          }
        },
        {
          "include": "$self"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.quarkdown",
          "match": "\\b(import)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.quarkdown",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.quarkdown",
          "match": "\\\\."
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.quarkdown",
          "match": "//.*"
        },
        {
          "name": "comment.block.quarkdown",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "headings": {
      "patterns": [
        {
          "match": "^(#{1,6})\\s+",
          "captures": {
            "1": {
              "name": "punctuation.definition.heading.markdown"
            }
          }
        }
      ]
    },
    "bold": {
      "patterns": [
        {
          "name": "markup.bold.markdown",
          "begin": "\\*\\*",
          "end": "\\*\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.bold.markdown"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.bold.markdown"
            }
          },
          "patterns": [
            {
              "include": "#quarkdown-elements"
            },
            {
              "include": "#quarkdown-values"
            }
          ]
        }
      ]
    },
    "italic": {
      "patterns": [
        {
          "name": "markup.italic.markdown",
          "begin": "\\*",
          "end": "\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.italic.markdown"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.italic.markdown"
            }
          },
          "patterns": [
            {
              "include": "#quarkdown-elements"
            },
            {
              "include": "#quarkdown-values"
            }
          ]
        }
      ]
    }
  },
  "scopeName": "source.qd"
}
